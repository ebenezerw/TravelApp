<!DOCTYPE html>
<html>
    <head>
        <title>Travel With Friends</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <header>
            <nav>
  <ul class="topnav" id="" myTopnav">
                    <li class="logo"><%= link_to "Travel With Friends", destinations_path %></li>
                    <li><%= link_to "Create New Destination", new_destination_path %></li>
                  <li class="searchForm">  <%= form_tag search_destinations_path do %>
                    <input class="search full-width" id="searchbar" name="query" placeholder="Search Destinations" type="text">
                    <%= submit_tag "Search", :place => nil %>
                    <% end %></li>

                    <% if current_user %>

          <li class="userInfo"><%= link_to "Sign Out", 'sign_out', method: :delete %></li>
            <li class="userInfo"><%= link_to current_user.name, users_show_path(current_user) %></li>

                <% else %>
                    <li class="userInfo"><%= link_to "auth/facebook" do %>Sign In With Facebook<% end %></li>
                    <% end %>
                    <li class="icon"><a href="javascript:void(0);" onclick="myFunction()">&#9776;</a></li>
      </ul>
    </nav>
</header>
<hr>


    <%= yield %>

<script>
$(".randbg").RandBG({
ClassPrefix: "bg",
count: 10
});
</script>

</body>


</html>
