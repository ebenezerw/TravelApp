<div class="chat">

    <% if @over_ten %>
    <%= link_to "Show Previous", "?m=all" %>
    <% end %>
    <div class=”ui segment”>
        <% @messages.each do |message| %>
        <% if message.body %>
        <% user = User.find(message.user_id) %>
        <div class=”item”>
            <div class=”content”>
                <div class=”header”>

                    <%= user.name %>
                    <%= message.message_time %></div>
                <div class=”list”>
                    <div class=”item”>
                        <i class=”right triangle icon”></i>
                        <%= message.body %>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
    <%= form_for [@conversation, @message]  do |conversation_form| %>
    <div class=”field”>
        <%= conversation_form.text_area :body %>
    </div>
    <div class="hide">
        <%= conversation_form.text_field :user_id, value: current_user.id %></div>
    <div>
        <%= conversation_form.submit  %>
    </div>
    <% end %>

</div>
